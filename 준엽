class Substance:
    def __init__(self, name, moles):
        self.name = name  # 물질 이름
        self.moles = moles  # 초기 몰 수

    def react(self, other, ratio_self=1, ratio_other=1):
        """
        두 물질이 정해진 비율로 반응하여 몰 수를 변화시킵니다.
        ratio_self: 현재 물질의 반응 비율
        ratio_other: 반응할 다른 물질의 비율
        """
        # 반응 가능한 최소 몰 수를 계산
        limiting_moles = min(self.moles / ratio_self, other.moles / ratio_other)
        
        # 각 물질의 몰 수 감소
        self.moles -= limiting_moles * ratio_self
        other.moles -= limiting_moles * ratio_other
        
        return limiting_moles  # 반응한 몰 수 반환

def main():
    # 사용자로부터 산과 염기의 몰 수를 입력받음
    try:
        acid_moles = float(input("산(HCl)의 몰 수를 입력하세요: "))
        base_moles = float(input("염기(NaOH)의 몰 수를 입력하세요: "))
        
        # 물질 객체 생성
        acid = Substance("HCl", acid_moles)
        base = Substance("NaOH", base_moles)

        # 중화 반응 실행 (1:1 비율)
        reacted_moles = acid.react(base, ratio_self=1, ratio_other=1)

        # 반응 결과 출력
        print(f"\n반응한 산(HCl)의 몰 수: {reacted_moles:.2f} 몰")
        print(f"반응 후 남은 산(HCl): {acid.moles:.2f} 몰")
        print(f"반응 후 남은 염기(NaOH): {base.moles:.2f} 몰")

        # 완전 중화 여부 확인
        if acid.moles == 0 and base.moles == 0:
            print("완전 중화되었습니다.")
        elif acid.moles > 0:
            print(f"산이 초과되었습니다. 남은 산: {acid.moles:.2f} 몰")
        else:
            print(f"염기가 초과되었습니다. 남은 염기: {base.moles:.2f} 몰")

    except ValueError:
        print("잘못된 입력입니다. 숫자를 입력해주세요.")

# 메인 함수 실행
if __name__ == "__main__":
    main()
