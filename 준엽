import java.util.Scanner;

class Substance {
    private String name;
    private double moles;

    // 생성자: 물질 이름과 몰 수를 설정
    public Substance(String name, double moles) {
        this.name = name;
        this.moles = moles;
    }

    // 몰 수 가져오기
    public double getMoles() {
        return moles;
    }

    // 몰 수 설정
    public void setMoles(double moles) {
        this.moles = moles;
    }

    // 반응 메서드
    public double react(Substance other, double ratioSelf, double ratioOther) {
        // 반응 가능한 최대 몰 수 계산
        double limitingMoles = Math.min(this.moles / ratioSelf, other.getMoles() / ratioOther);
        
        // 각 물질의 몰 수 감소
        this.moles -= limitingMoles * ratioSelf;
        other.setMoles(other.getMoles() - limitingMoles * ratioOther);
        
        return limitingMoles;  // 반응한 몰 수 반환
    }
}

public class NeutralizationReaction {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // 사용자로부터 산과 염기의 몰 수 입력받기
        System.out.print("산(HCl)의 몰 수를 입력하세요: ");
        double acidMoles = scanner.nextDouble();
        
        System.out.print("염기(NaOH)의 몰 수를 입력하세요: ");
        double baseMoles = scanner.nextDouble();

        // 물질 객체 생성
        Substance acid = new Substance("HCl", acidMoles);
        Substance base = new Substance("NaOH", baseMoles);

        // 중화 반응 실행 (1:1 비율)
        double reactedMoles = acid.react(base, 1, 1);

        // 반응 결과 출력
        System.out.printf("\n반응한 산(HCl)의 몰 수: %.2f 몰\n", reactedMoles);
        System.out.printf("반응 후 남은 산(HCl): %.2f 몰\n", acid.getMoles());
        System.out.printf("반응 후 남은 염기(NaOH): %.2f 몰\n", base.getMoles());

        // 완전 중화 여부 확인
        if (acid.getMoles() == 0 && base.getMoles() == 0) {
            System.out.println("완전 중화되었습니다.");
        } else if (acid.getMoles() > 0) {
            System.out.printf("산이 초과되었습니다. 남은 산: %.2f 몰\n", acid.getMoles());
        } else {
            System.out.printf("염기가 초과되었습니다. 남은 염기: %.2f 몰\n", base.getMoles());
        }

        scanner.close();
    }
}
